<mujoco>
    <compiler meshdir="../meshes/Hindarm" />

    <include file="materials.xml" />
    
    <default>
        
        <default class="visual">
            <geom pos="0.13852 0 0.002" euler="90 -90 0" />
        </default>
    </default>


    <asset>
        <mesh name="Hindarm_body_visual" file="Hindarm_arm.STL" />
        <mesh name="Hindarm_motor_visual" file="Hindarm_motor.STL" />
