<mujoco>
    <worldbody>
        <body name="floor">
            <geom type="plane" size="2 2 0.01" />
        </body>
    </worldbody>

    <worldbody>
        <body name="conveyor">
            <body name="roller1" euler="90 0 0" pos="0.95 0 0.1" >
                <geom type="cylinder" size="0.05 0.25" rgba="0 0 1 1" />
                <joint name="roller1_joint" type="hinge" damping="0.01" />
                <geom type="box" size="0.04 0.04 0.001" pos="0 0 -0.251" />
                <site name="site1" type="sphere" rgba="1 0 0 1" size="0.01" pos="0 0.05 0" />
            </body>

            <body name="roller2" euler="90 0 0" pos="-0.95 0 0.1" >
                <geom type="cylinder" size="0.05 0.25" rgba="0 0 1 1" />
                <joint name="roller2_joint" type="hinge" damping="0.01" />
                <geom type="box" size="0.04 0.04 0.001" pos="0 0 -0.251" />
            </body>

            <body name="belt" pos="0 0 0.17" >
                <geom type="box" size="1 0.25 0.01" rgba="0 0 0 1" friction="0.2 0.005 0.0001" />
                <site name="belt_motion_touch_sensor_site" pos="0 0 0.001" type="box" size="1 0.25 0.01" rgba="0 0 0 0" />

                <site name="right_light_sensor" type="box" pos="-0.65 0 0.03" size="0.005 0.25 0.005" euler="0 90 0" rgba="1 1 0 1" />

                <site name="left_light_sensor" type="box" pos="0.65 0 0.03" size="0.005 0.25 0.005" euler="0 -90 0" rgba="1 1 0 1" />
            </body>
        </body>

    </worldbody>

    <worldbody>
        <body name="box" pos="0 1.275 1" euler="0 0 0" >
            <geom type="box" size="0.05 0.05 0.05" rgba="1 0 0 1" friction="0.2 0.005 0.0001" mass="0.1" />
            <joint name="box_joint" type="free" damping="0.2" />
            <site name="box_site" type="box" size="0.05 0.05 0.05" rgba="1 0 0 1" />
        </body>
    </worldbody>

    <equality>
        <joint joint1="roller1_joint" joint2="roller2_joint" />
    </equality>

    <actuator>
        <velocity name="roller_vel" joint="roller1_joint" ctrlrange="-100 100" />
        <velocity name="box_vel" joint="box_joint" gear="1 0 0 0 0 0" ctrlrange="-20 20" />
    </actuator>

    <sensor>
        <velocimeter name="conv_velocimeter" site="site1" />
        <touch name="conv_touch" site="belt_motion_touch_sensor_site"/>
        <touch name="conv_light_sensor_r" site="right_light_sensor"  />
        <touch name="conv_light_sensor_l" site="left_light_sensor"  />
    </sensor>

</mujoco>