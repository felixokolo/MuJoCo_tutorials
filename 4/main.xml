<mujoco>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="-130" elevation="-60" />
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2" />
  </asset>

    <worldbody>
        <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />
    </worldbody>


    <asset>
        <model name="conv_belt_asset" file="models/conveyor.xml" />
        <model name="pneumatic_cylinder_asset" file="models/pneumatic_cylinder.xml" />
    </asset>

    
    <worldbody>
        <body pos="0 1.257 0">

            <attach model="conv_belt_asset" body="conveyor" prefix="left_" />

            <body pos="-0.75 0.75 0.25" euler="0 0 -90" >
                <attach model="pneumatic_cylinder_asset" body="pneumatic_cylinder" prefix="left_"/>
            </body>
        </body>
    </worldbody>

    <worldbody>
        <body pos="-0.75 0 0" euler="0 0 90">
            <attach model="conv_belt_asset" body="conveyor" prefix="up_" />
        </body>
    </worldbody>

    <worldbody>
        <body pos="0 -1.257 0" euler="0 0 180">
            <attach model="conv_belt_asset" body="conveyor" prefix="right_" />

            <body pos="-0.75 0.75 0.25" euler="0 0 -90" >
                <attach model="pneumatic_cylinder_asset" body="pneumatic_cylinder" prefix="right_"/>
            </body>
        </body>
    </worldbody>

    <worldbody>
        <body pos="0.75 0 0" euler="0 0 -90">
            <attach model="conv_belt_asset" body="conveyor" prefix="down_" />
        </body>
    </worldbody>

    <worldbody>
        <attach model="conv_belt_asset" body="box" prefix="free_" />
    </worldbody>
    
</mujoco>